<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="215sp"
    android:layout_height="215sp"
    android:paddingTop="15sp"
    android:paddingEnd="10sp"
    android:paddingHorizontal="@dimen/item_library_album_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_song_art_image_view_parent"
        android:layout_width="@dimen/item_library_album_art_size"
        android:layout_height="@dimen/item_library_album_art_size"
        android:background="@drawable/album_shape">
        <ImageView
            android:id="@+id/item_song_art_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/library_add_40px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_song_art_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Создать плейлист"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>